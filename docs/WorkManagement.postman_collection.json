          }
        },
        {
          "name": "Create Task (Admin/Manager)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Design homepage\",\n  \"description\": \"Create Figma mockups for the new homepage\",\n  \"project\": \"PROJECT_ID_HERE\",\n  \"assignedTo\": \"USER_ID_HERE\",\n  \"priority\": \"high\",\n  \"dueDate\": \"2026-02-28\",\n  \"status\": \"todo\"\n}"
