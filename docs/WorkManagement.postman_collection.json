            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"USER_ID_HERE\"\n}"
            }
          }
        },
        {
          "name": "Remove Member from Project",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/projects/:id/members",
              "host": ["{{baseUrl}}"],
              "path": ["projects", ":id", "members"],
              "variable": [{ "key": "id", "value": "PROJECT_ID_HERE" }]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"USER_ID_HERE\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "‚úÖ Tasks",
      "item": [
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/tasks?project=PROJECT_ID&status=in-progress&priority=high&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"],
              "query": [
                { "key": "project", "value": "PROJECT_ID" },
                { "key": "status", "value": "in-progress" },
                { "key": "priority", "value": "high" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
